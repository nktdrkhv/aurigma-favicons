{
  "manifest_version": 2,
  "name": "Aurigma Tab Icons",
  "description": "Automatic browser tab icons for Aurigma's Customer Canvas",
  "version": "1.0.0",
  "author": "Nikita Dorokhov, Tom Plant",
  "content_scripts": [
    {
      "matches": [
        "https://customerscanvas.com/help/*",
        "https://customerscanvas.com/dev/*",
        "https://api.customerscanvashub.com/*",
        "https://customerscanvashub.com/*",
        "https://eu.customerscanvashub.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "resources": [
    "assets/favicon-green.ico",
    "assets/favicon-orange.ico",
    "assets/favicon-purple.ico",
    "assets/favicon-red.ico",
    "assets/favicon-yellow.ico"
  ]
}